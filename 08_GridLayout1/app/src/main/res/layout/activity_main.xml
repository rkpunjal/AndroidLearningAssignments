<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rkpun.gridlayout1.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:orientation="horizontal"
        >

        <Button
            android:text="Hei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button_r0c0"
            android:textAlignment="center"
            android:onClick="playPhrase"
            android:tag="Hei"
            />

        <Button
            android:text="God morgen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button_r0c1"
            android:textAlignment="center"
            android:onClick="playPhrase"
            android:tag="God morgen"
            />

        <Button
            android:text="Tusen Takk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button_r1c0"
            android:textAlignment="center"
            android:onClick="playPhrase"
            android:tag="Tusen Takk"
            />

        <Button
            android:text="God kveld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button_r1c1"
            android:textAlignment="center"
            android:onClick="playPhrase"
            android:tag="God kveld"
            />

        <Button
            android:text="God natt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button_r2c0"
            android:textAlignment="center"
            android:onClick="playPhrase"
            android:tag="God natt"
            />


        <Button
            android:text="Hva heter du?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button_r2c1"
            android:textAlignment="center"
            android:onClick="playPhrase"
            android:tag="Hva heter du"
            />

        <Button
            android:text="Jeg heter ..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button_r3c0"
            android:textAlignment="center"
            android:onClick="playPhrase"
            android:tag="Jeg heter"
            />

        <Button
            android:text="Ha det bra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/button_r3c1"
            android:textAlignment="center"
            android:onClick="playPhrase"
            android:tag="Ha det bra"
            />

    </GridLayout>

</RelativeLayout>
