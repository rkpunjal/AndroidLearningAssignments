<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rkpun.celebrityguess.MainActivity">

    <Button
        android:text="B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answerButtonB"
        android:textAllCaps="false"
        android:tag="B"
        android:onClick="onAnswerSelect"
        android:layout_above="@+id/answerButtonC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answerButtonC"
        android:textAllCaps="false"
        android:tag="C"
        android:onClick="onAnswerSelect"
        android:layout_above="@+id/answerButtonD"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score : 0/0"
        android:id="@+id/scoreTextView"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answerButtonA"
        android:textAllCaps="false"
        android:tag="A"
        android:onClick="onAnswerSelect"
        android:layout_above="@+id/answerButtonB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="D"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answerButtonD"
        android:textAllCaps="false"
        android:tag="D"
        android:onClick="onAnswerSelect"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@android:color/transparent"
        android:id="@+id/photoImageView"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_above="@+id/answerButtonA"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:scaleType="fitXY" />

    <Button
        android:text="Start Again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/scoreTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/startAgainButton"
        android:onClick="startAgain"
        style="@android:style/Widget.Holo.Button.Toggle"
        android:textSize="10sp" />

</RelativeLayout>
